<div class="liste recruteur ">

    <h3 id="idnonvalid"><strong>Recruteurs non validées</strong>
        <a class="" href="#idvalid"> Recruteurs validées
            {% include 'svg/svg_bas.html.twig' %}
        </a>
    </h3>
    <div class="tbody" id="novalid">
        {% set index = 0 %}
        {% for recruteur in listes %}

        {% if recruteur.valider == 0 %}
        {% set index = index + 1 %}
        <article class="novalid  {% if  index % 2 == 0  %} paire {% else %} impaire {% endif %} row">
            {% include 'consultant/element_recruteur.html.twig' %}
            <div class="row">
                <div class="col-xl-6 action"><span><strong>voir:</strong></span><a class="voir btn"
                        href="{{path('app_consultant_voirrecruteur',{'id':recruteur.id})}}">{% include
                        'svg/svg_voir.html.twig' %}
                    </a>
                </div>


                <div class="col-xl-6 action">

                    <div class="col-xl-3">
                        {% if recruteur.profil == true %}
                        <a href="{{path('app_consultant_validation',{'id':recruteur.id})}}"
                            class="btn btn-primary">Valider</a>
                        {% else %}
                        <strong>profil incomplet</strong>
                        {% endif %}

                    </div>
                    <div class="col-xl-3">
                        <a href="{{path('app_consultant_supprimer_profil',{'id':recruteur.id})}}" class="btn ">{%
                            include 'svg/svg_supprimer.html.twig' %}</a>
                    </div>

                </div>
            </div>

        </article>
        {% endif %}
        {% endfor %}
    </div>
    <h3 id="idvalid"><strong>Recruteurs validées</strong>
        <a class=" " href="#idnonvalid"><span>Recruteurs non validées</span>{% include 'svg/svg_haut.html.twig' %}</a>
    </h3>
    <div class="tbody" id="valid">
        {% set index = 0 %}
        {% for recruteur in listes %}

        {% if recruteur.valider == 1 %}
        {% set index = index + 1 %}
        <article class="valid  {% if  index % 2 == 0  %} paire {% else %} impaire {% endif %} ">
            {% include 'consultant/element_recruteur.html.twig' %}
            <div class="row">
                <div class="col-xl-6 action">
                    <a class="voir btn" href="{{path('app_consultant_voirrecruteur',{'id':recruteur.id})}}">
                        {% include 'svg/svg_voir.html.twig' %}
                    </a>
                </div>

                <div class="col-xl-6 action">
                    {% if candidature[recruteur.id] == false %}
                    <a href="{{path('app_consultant_desactivation',{'id':recruteur.id})}}"
                        class="btn btn-secondary">Supprimer la validation</a>

                    {% else %}
                    <em class="color-alert">Ce recruteur a posté une annonce</em>
                    {% endif %}
                    {% include 'svg/svg_valider_check.html.twig' %}
                </div>
            </div>
        </article>
        {% endif %}
        {% endfor %}
    </div>


</div>