<h4 id="idvalid">Candidats validés</h4>
<div class="tbody" id="valid">
    {% set index = 0 %}
    {% for candidat in listes %}

    {% if candidat.valider == 1 %}
    {% set index = index + 1 %}
    <article class="valid  {% if  index % 2 == 0  %} impaire {% else %} paire {% endif %}">

        <div class="row">

            <div class="col-xl-2">
                <span><strong>Nom:</strong></span><strong>{{candidat.trtProfilcandidat.nom}}</strong>
            </div>
            <div class="col-xl-2"><span><strong>Prenom:</strong></span>{{candidat.trtProfilcandidat.prenom}}
            </div>
            <div class="col-xl-2 prof">
                <span><strong>profession:</strong></span>{{candidat.trtProfilcandidat.profession.titre }}
            </div>
            <div class="col-xl-4"><span><strong>Email:</strong></span>{{candidat.Email}}</div>
            <div class="col-xl-1"><span><strong>CV:</strong></span>
                <a class="cv" href="{{asset('./uploads/cv/'~ candidat.trtProfilcandidat.cv)}}" target="_blank">
                    {% include 'svg/svg_cv.html.twig' %}<strong>CV</strong>
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-6 action"><span><strong>voir:</strong></span><a class="voir btn "
                    href="{{path('app_consultant_voircandidat',{'id':candidat.id,'valider':'valider'})}}">
                    {% include 'svg/svg_voir.html.twig' %}
                </a>
            </div>
            <div class="col-xl-6 action">

                {% if candidature[candidat.id] == false %}

                <a href="{{path('app_consultant_desactivation',{'id':candidat.id,'valider':'valider'})}}"
                    class="btn btn-secondary">Annuler
                    la validation</a>
                {% else %}
                <em class="color-alert">Ce candidat a postulé pour une annonce</em>
                {% endif %}
                {% include 'svg/svg_valider_check.html.twig' %}


            </div>
    </article>
    {% endif %}
    {% endfor %}
</div>